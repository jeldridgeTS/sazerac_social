<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% @articles.each do |article| %>
  <div class="content">
    <p><%= link_to article.title, article_show_path(article) %></p>
    <p><%= article.body %></p>
    <%= image_tag article.thumb_image %>
    <div>
      <span><%= link_to 'Edit', edit_article_path(article) %></span>
      <span><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
    <hr>
  </div>
<% end %>

<br>

<% if current_user.has_role?("writer") || current_user.has_role?("admin") %>
  <%= link_to 'New Article', new_article_path %>
<% end %>
