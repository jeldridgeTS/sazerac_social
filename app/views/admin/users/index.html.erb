<h1>Users</h1>

<% if @users %>
  <% @users.each do |user| %>
    <div class="content">
      <p>
        <span class="email"><%= user.email %></span>
        <span class="display-name"><%= user.display_name %></span>
        <span class="assigned-roles"><%= user.user_roles %></span>
        <span><%= link_to user.id, admin_user_path(user) %></span>
        <%= form_for user, url: add_role_admin_user_path(user.id), html: { method: :patch } do |f| %>
          <%= f.label :roles %>
          <%= f.select "roles", options_for_select(User.all_roles) %>
          <%= f.submit %>
        <% end %>
      </p>
      <hr>
    </div>
  <% end %>
<% end %>
